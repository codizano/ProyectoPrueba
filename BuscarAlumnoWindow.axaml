<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProyectoPrueba.BuscarAlumnoWindow"
        Title="Buscar Alumno"
        Width="400"
        Height="300">
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Buscar Alumno" FontSize="18" FontWeight="Bold"/>
        
        <TextBox x:Name="BuscarTextBox" 
                 Watermark="Ingresa el nombre del alumno..."
                 Margin="0,10,0,0"/>
        
        <Button Content="🔍 Buscar" 
                Background="#FF9800" 
                Foreground="White"
                BorderThickness="0"
                Padding="15,8"
                HorizontalAlignment="Right"
                Click="OnBuscarClick"/>
        
        <TextBlock x:Name="ResultadoText" Margin="0,10,0,0"/>
    </StackPanel>
</Window>