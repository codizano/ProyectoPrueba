<Window xmlns="https://github.com/avaloniaui"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Class="ProyectoPrueba.BuscarAlumnoWindow"
Title="Buscar Alumno"
Width="400"
Height="300">
<StackPanel Margin="20" Spacing="10">
<TextBlock Text="Buscar Alumno" FontSize="18" FontWeight="Bold"/>
<TextBox x:Name="BuscarTextBox"
Watermark="Ingresa el nombre del alumno..."
Margin="0,10,0,0"/>
<Grid>
<Grid.ColumnDefinitions>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="Auto"/>
</Grid.ColumnDefinitions>
<Button Grid.Column="1"
Content="🔍 Buscar"
Background="#FF9800"
Foreground="White"
BorderThickness="0"
Padding="15,8"
HorizontalAlignment="Right"
Click="OnBuscarClick"/>
</Grid>
<TextBlock x:Name="ResultadoText" Margin="0,10,0,0" FontFamily="Consolas" FontSize="18" Foreground="#388E3C"/>
<Button x:Name="AgregarObservacionButton"
Content="➕ Agregar Observación"
Background="#4CAF50"
Foreground="White"
BorderThickness="0"
Padding="15,8"
HorizontalAlignment="Right"
IsVisible="False"
Click="OnAgregarObservacionClick"
Margin="0,10,0,0"/>
</StackPanel>
</Window>